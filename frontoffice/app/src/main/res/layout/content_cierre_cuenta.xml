<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/bckg"
    tools:context=".views.activities.CierreCuentaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cierre de Cuenta"
        android:id="@+id/tVTitulo"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/tVTitulo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/view" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_above="@+id/tvSub"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SubTotal"
        android:id="@+id/tvSub"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1600"
        android:id="@+id/tVSubTotalValor"
        android:layout_alignTop="@+id/view2"
        android:layout_alignRight="@+id/view2"
        android:layout_alignEnd="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bs. "
        android:id="@+id/tVSubMoneda"
        android:layout_alignTop="@+id/tVSubTotalValor"
        android:layout_toLeftOf="@+id/tVSubTotalValor"
        android:layout_toStartOf="@+id/tVSubTotalValor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IVA"
        android:id="@+id/tVIVA"
        android:layout_below="@+id/tVSubMoneda"
        android:layout_alignLeft="@+id/tvSub"
        android:layout_alignStart="@+id/tvSub" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="192"
        android:id="@+id/tVIVAValor"
        android:layout_below="@+id/tVSubTotalValor"
        android:layout_alignRight="@+id/tVSubTotalValor"
        android:layout_alignEnd="@+id/tVSubTotalValor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bs. "
        android:id="@+id/tVIVAMoneda"
        android:layout_below="@+id/tVSubTotalValor"
        android:layout_toLeftOf="@+id/tVSubTotalValor"
        android:layout_toStartOf="@+id/tVSubTotalValor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:id="@+id/tVTotal"
        android:layout_below="@+id/tVIVA"
        android:layout_alignLeft="@+id/tVIVA"
        android:layout_alignStart="@+id/tVIVA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1792"
        android:id="@+id/textView19"
        android:layout_alignTop="@+id/tVTotal"
        android:layout_toRightOf="@+id/tVTotalMoneda"
        android:layout_toEndOf="@+id/tVTotalMoneda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bs. "
        android:id="@+id/tVTotalMoneda"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignLeft="@+id/tVIVAMoneda"
        android:layout_alignStart="@+id/tVIVAMoneda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha:"
        android:id="@+id/tVFecha"
        android:layout_alignBottom="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23-04-2016"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/tVFecha"
        android:layout_toRightOf="@+id/tVFecha"
        android:layout_toEndOf="@+id/tVFecha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora:"
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05:32"
        android:id="@+id/textView20"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lVOrden"
        android:layout_below="@+id/view"
        android:layout_alignBottom="@+id/view2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>