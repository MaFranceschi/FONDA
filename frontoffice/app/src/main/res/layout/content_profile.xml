<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ProfileActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imageViewNames"
                android:layout_column="0"
                android:src="@drawable/nav_profile"
                android:paddingRight="25dp"/>
            <EditText
                android:inputType="textPersonName"
                android:text="Nombres"
                android:ems="10"
                android:id="@+id/pprofile_names"
                android:layout_column="1"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:inputType="textPersonName"
                android:text="Aperrilos"
                android:ems="10"
                android:id="@+id/profile_lastnames"
                android:layout_column="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/profile_ci"
                android:layout_column="1"
                android:hint="Cédula de Identidad" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imageViewNaci"
                android:layout_column="0"
                android:src="@android:drawable/ic_menu_day"
                android:paddingRight="25dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/nacimi"
                android:layout_column="1"
                android:hint="Fecha de nacimiento" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imageViewphone"
                android:layout_column="0"
                android:src="@android:drawable/ic_menu_call"
                android:paddingRight="25dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/profile_phone"
                android:layout_column="1"
                android:hint="Teléfono" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/profile_cell"
                android:layout_column="1"
                android:hint="Celular" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView android:id="@+id/imageViewpDir"
                android:layout_column="0"
                android:src="@android:drawable/ic_dialog_map"
                android:paddingRight="25dp"/>
            <EditText
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/profile_dir"
                android:layout_column="1"
                android:hint="Dirección" />
        </TableRow>

    </TableLayout>
</RelativeLayout>