<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left">

        <ImageView
            android:id="@+id/imageRest"
            android:layout_width = "70dp"
            android:layout_height= "70dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="test Text"
            android:typeface="monospace"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="testText2"
            android:typeface="monospace"
            android:textSize="13dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="texttest3"
            android:typeface="monospace"
            android:textSize="13dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|right"
        android:gravity="right"
        android:layout_marginLeft="5dp">
        <ImageView android:id="@+id/imageViewNames"
            android:layout_column="0"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical|right"
            android:layout_width="@dimen/design_navigation_icon_size"
            android:layout_height="@dimen/design_navigation_icon_size"
            android:layout_alignParentRight="true" />
    </LinearLayout>

</LinearLayout>