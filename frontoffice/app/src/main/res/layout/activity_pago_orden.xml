<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ds201625.fonda.activities.PagoOrdenActivity"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_column="9" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pago de orden"
            android:id="@+id/tV_pagoOrden"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:layout_column="2"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_column="3"
            android:src="@mipmap/pago_icon"
            android:maxHeight="80dp"
            android:layout_gravity="left" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total de la orden"
        android:id="@+id/tV_montoTotal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView6"
            android:layout_column="1"
            android:text="Bs."
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2000"
            android:id="@+id/tV_totalOrden"
            android:layout_gravity="top|center_vertical"
            android:layout_marginTop="10dp"
            android:layout_column="2"
            android:layout_marginLeft="15dp" />
    </TableRow>

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tarjeta de crÃ©dito"
        android:id="@+id/tV_tdc"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:id="@+id/spinner"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dropdown"
            android:layout_marginTop="10dp"
            android:layout_column="1"
            android:layout_span="2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_column="3"
            android:background="@mipmap/add_icon"
            android:width="20dp"
            android:elegantTextHeight="false"
            android:layout_gravity="left"
            android:onClick="cambiarTdc" />

    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Monto de propina"
        android:id="@+id/tV_propina"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tV_propimonto"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:text="Bs."
            android:layout_gravity="bottom" />

        <EditText
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:id="@+id/eT_propina"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:hint="Propina"
            android:layout_column="2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:id="@+id/button2"
            android:layout_column="3"
            android:layout_marginRight="40dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total orden + Propina"
        android:id="@+id/tV_totaltotal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:layout_marginLeft="10dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView7"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:text="Bs."
            android:layout_gravity="top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tV_ultimo"
            android:layout_column="2" />
    </TableRow>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Procesar pago"
        android:id="@+id/btn_procesarPago"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:width="600px"
        android:onClick="cambiarFactura"
        android:textSize="16dp" />

</TableLayout>
